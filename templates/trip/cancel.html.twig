{% extends 'base.html.twig' %}

{% block title %}Annuler une sortie{% endblock %}

{% block body %}
{{ form_start(form, {'attr': {'class': 'w-100'}}) }}
    {{ form_widget(form.triName, {'attr': {'hidden': true}}) }}
    {{ form_widget(form.triStartingDate, {'attr': {'hidden': true}}) }}
    {{ form_widget(form.triClosingDate, {'attr': {'hidden': true}}) }}
    {{ form_widget(form.triSite, {'attr': {'hidden': true}}) }}
    {{ form_widget(form.triLocation, {'attr': {'hidden': true}}) }}
    {{ form_widget(form.triMaxInscriptionNumber, {'attr': {'hidden': true}}) }}
    {{ form_widget(form.triDuration, {'attr': {'hidden': true}}) }}
    {{ form_widget(form.triDescription, {'attr': {'hidden': true}}) }}
    {{ form_widget(form.triState, {'attr': {'hidden': true}}) }}
    {{ form_widget(form.triOrganiser, {'attr': {'hidden': true}}) }}
    {{ form_row(form._token) }}
    <div class="d-flex justify-content-center p-3">
        <h1>Annuler une sortie</h1>
    </div>
    <div class="d-flex w-100 p-3 justify-content-end">
        <div class="d-flex flex-column w-100">
            <div class="d-flex flex-row gap-3 justify-content-end">
                <div class="d-flex w-25">
                    <p>Nom de la sortie :</p>
                </div>
                <div class="w-50">
                    <p> {{ trip.triName }}</p>
                </div>
            </div>
            <div class="d-flex flex-row gap-3 justify-content-end">
                <div class="d-flex w-25">
                    <p>Date de la sortie :</p>
                </div>
                <div class="w-50">
                    <p>{{ trip.triStartingDate | date('d/m/Y Ã  H \\H i') }}</p>
                </div>
            </div>
            <div class="d-flex flex-row gap-3 justify-content-end">
                <div class="d-flex w-25">
                    <p>Ville organisatrice :</p>
                </div>
                <div class="w-50">
                    <p>{{ trip.triSite.sitName }}</p>
                </div>
            </div>
            <div class="d-flex flex-row gap-3 justify-content-end">
                <div class="d-flex w-25">
                    <p>Lieu :</p>
                </div>
                <div class="w-50">
                    <p>{{ trip.triLocation.locStreet ~ ' ' ~ trip.triLocation.locCity.citPostCode ~ ' ' ~ trip.triLocation.locCity.citName }}</p>
                </div>
            </div>
            <div class="d-flex flex-row gap-3 justify-content-end">
                <div class="d-flex w-25">
                    <p>{{ form_label(form.triCancellationReason, 'Motif :') }}</p>
                </div>
                <div class="w-50">
                    <p>{{ form_widget(form.triCancellationReason, {'attr': {'class': 'w-75'}}) }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center column-gap-5 p-3">
        <button type="submit" class="btn btn-success btn-lg">Enregistrer</button>
        <a href="{{ path('app_home') }}">
            <button type="button" class="btn btn-danger btn-lg">Annuler</button>
        </a>
    </div>
{{ form_end(form) }}
{% endblock %}