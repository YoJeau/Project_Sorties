{% extends 'base.html.twig' %}

{% block title %}Import de participants{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center p-3">
        <h1>Importer des participants</h1>
    </div>
    <div class="d-flex flex-row justify-content-center p-5">
        {{ form_errors(form) }}

        {{ form_start(form, { 'attr' : { 'class': 'w-50' } }) }}
        {{  form_widget(form, { 'attr' : { 'class': 'mb-5' } }) }}

        <div class="d-flex flex-row justify-content-evenly">
            <button type="submit" class="btn btn-success">Importer</button>
            <a href="{{ path('app_participant_administration') }}"><button type="button" class="btn btn-danger">Annuler</button></a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
