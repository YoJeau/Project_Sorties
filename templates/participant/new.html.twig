{% extends 'base.html.twig' %}

{% block title %}Nouveau participant{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center p-3">
        <h1>Cr√©ation d'un nouveau participant</h1>
    </div>
    <div class="d-flex justify-content-center p-5">
        <div class="w-75">
            {{ form_errors(form) }}

            {{ form_start(form) }}
                {{  form_row(form.parUsername, {'attr': {'required': 'required'}}) }}
                {{  form_row(form.parFirstName, {'attr': {'required': 'required'}}) }}
                {{  form_row(form.parLastName, {'attr': {'required': 'required'}}) }}
                {{  form_row(form.parPhone, {'attr': {'required': 'required'}}) }}
                {{  form_row(form.parEmail, {'attr': {'required': 'required'}}) }}
                {{  form_row(form.parSite, {'attr': {'required': 'required'}}) }}
                {{  form_row(form._token) }}

            <div class="d-flex flex-row justify-content-around">
                <button type="submit" class="btn btn-success">Enregistrer</button>
                <button type="reset" class="btn btn-secondary">Effacer</button>
                <button type="button" onClick="window.history.back();" class="btn btn-danger">Annuler</button>
            </div>

            {{ form_end(form, {render_rest: false}) }}
        </div>
    </div>
{% endblock %}
