<div>
    <h1>Mes sorties</h1>
</div>
{% if participantTrips|length > 0 %}
    <div class="overflow-y-auto">
        <table class="table table-sm">
            <thead class="table-primary table-header-fixed">
            <tr>
                <th scope="col">
                    Nom de la sortie
                </th>
                <th scope="col">
                    Date de la sortie
                </th>
                <th scope="col">
                    Lieu
                </th>
            </tr>
            </thead>
            <tbody>
            {% for trip in participantTrips %}
                <tr class="{{ loop.index is even ? 'table-dark' : '' }}">
                    <td><a href="{{ path('app_trip_show', {'id': trip.id }) }}">{{ trip.triName }}</a></td>
                    <td>{{ trip.triStartingDate|date("d/m/Y H:i") }}</td>
                    <td>{{ trip.triLocation.locName }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div>
        <p>Aucune sortie</p>
    </div>
{% endif %}