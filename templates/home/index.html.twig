{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}-Accueil{% endblock %}

{% block body %}
    <div class="container-fluid row mt-4">
        <h2 class="ms-5">Filtrer les sorties</h2>
        <div class="d-flex flex-row justify-content-lg-evenly">
            <div class="d-flex flex-column">
                <div class="d-flex flex-row mt-3">
                    <label for="name-site" class="me-2 form-label">Site: </label>
                    <select class="form-select" name="name-site" id="name-site">
                        <option value="" selected disabled>--Choississez un site</option>
                        {% for site in sites %}
                        <option value="{{ site.getId()}}">{{ site.getSitName() }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="d-flex flex-row mt-3">
                    <label for="search-name-site" class="form-label me-2"> Le nom de la sortie contient </label>
                    <input class="form-control" type="text" name="search-name-site" id="search-name-site">
                </div>
                <div class="d-flex flex-row mt-3">
                    <label for="start-date" class="form-label me-2"> Entre</label>
                    <input class="form-control me-2" type="date" name="start-date" id="start-date">
                    <label for="end-date" class="form-label me-2"> et </label>
                    <input class="form-control" type="date" name="end-date" id="end-date">
                </div>
            </div>
            <div class="d-flex flex-column ">
                <div class="d-flex flex-row mt-3">
                    <input class="form-check-input me-2" type="checkbox" value="yes" id="organisator-trip" name="organisator-trip">
                    <label class="form-check-label" for="organisator-trip">Sortie dont je suis l'organisateur/trice</label>
                </div>
                <div class="d-flex flex-row mt-3">
                    <input class="form-check-input me-2" type="checkbox" value="yes" id="subcribed-trip" name="subcribed-trip">
                    <label class="form-check-label" for="subcribed-trip">Sortie auxquelles je suis inscrit/e</label>
                </div>
                <div class="d-flex flex-row mt-3">
                    <input class="form-check-input me-2" type="checkbox" value="yes" id="not-subscribed-trip" name="not-subscribed-trip">
                    <label class="form-check-label" for="not-subscribed-trip">Sortie auxquelles je ne suis pas inscrit/e</label>
                </div>
                <div class="d-flex flex-row mt-3">
                    <input class="form-check-input me-2" type="checkbox" value="yes" id="ancient-trip" name="ancient-trip">
                    <label class="form-check-label" for="ancient-trip">Sorties passées</label>
                </div>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                <button class="p-4 btn btn-outline-primary" type="button" id="search-trip" name="search-trip"> Rechercher</button>
            </div>
        </div>
    </div>
    <div class="container-fluid d-flex justify-content-center mt-4">
        <table class="table table-hover" name="trip-list" id="trip-list">
            <thead class="border border-primary">
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de la sortie</th>
                <th scope="col">Clôture</th>
                <th scope="col">Inscrits/place</th>
                <th scope="col">Etat</th>
                <th scope="col">Inscrit</th>
                <th scope="col">Organisateur</th>
                <th scope="col"> Actions</th>
            </thead>
            <tbody>
            {% if trips|length != 0 %}
                {%  set classColor = {
                    'Passée' : "table-dark",
                    'Ouverte' : "table-light",
                    'Créée' : "table-primary",
                    'Clôturée' : "table-warning",
                    'Annulée' : "table-danger",
                    'Activité en cours':'table-success'
                }
            %}
                {% for trip in trips %}
                    <tr class="{{ classColor[trip.getTriState().getStaLabel()] }}" data-trip-id="{{ trip.getId() }}">
                        <td> {{ trip.getTriName() }}</td>
                        <td>{{ trip.getTriStartingDate()|date("m/d/Y") }}</td>
                        <td>{{ trip.getTriClosingDate|date("m/d/Y") }}</td>
                        <td>{{ trip.getTriSubscribes()| length}}/{{ trip.getTriMaxInscriptionNumber() }}</td>
                        <td>{{ trip.getTriState().getStaLabel()}}</td>
                        <td>
                            {% set userIsSubscribed = false %}
                            {% for subscribe in trip.getTriSubscribes() %}
                                {% if subscribe.getSubParticipantId() == app.user %}
                                    {% set userIsSubscribed = true %}
                                {% endif %}
                            {% endfor %}
                            {% if userIsSubscribed %}
                                <h5>
                                    <span class="badge rounded-pill bg-info">Inscrit</span>
                                </h5>
                            {% endif %}
                        </td>
                        <td>{{ trip.getTriOrganiser().getParFirstName() }} {{ trip.getTriOrganiser().getParLastName() }}</td>
                        <td>
                            {% if userIsSubscribed and trip.getTriState().getStaLabel() == 'Activité en cours' %}
                                <a href=""> <span class="badge rounded-pill bg-info">Afficher</span></a>
                            {% endif %}

                            {% if trip.getTriState().getStaLabel() == 'Créée' and app.user.getId() == trip.getTriOrganiser().getId() %}
                                <a href=""> <span class="badge rounded-pill bg-info">Modifier</span></a>
                                <a href=""> <span class="badge rounded-pill bg-info">Publier</span></a>
                            {% endif %}

                            {% if trip.getTriState().getStaLabel() == 'Ouverte' and userIsSubscribed == false %}
                                <a href=""> <span class="badge rounded-pill bg-info">S'inscrire</span></a>
                                <a href=""> <span class="badge rounded-pill bg-info">Afficher</span></a>
                            {% endif %}
                            {%  if trip.getTriState().getStaLabel() == 'Ouverte' and userIsSubscribed == true  %}
                                <a href=""> <span class="badge rounded-pill bg-info">Se désinscrire</span></a>
                                <a href=""> <span class="badge rounded-pill bg-info">Afficher</span></a>
                            {% endif %}

                            {% if trip.getTriState().getStaLabel() == 'Ouverte' and app.user.getId() == trip.getTriOrganiser().getId() %}
                                <a href=""> <span class="badge rounded-pill bg-info">Afficher</span></a>
                                <a href=""> <span class="badge rounded-pill bg-info">Annuler</span></a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr class="table-warning">
                    <td colspan="8" class="text-center">Aucune sortie de disponible</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}
