{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <form method="post" class="w-100 h-100">
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="d-flex flex-column justify-content-center align-items-center w-100 h-100 gap-5">
            <div class="d-flex flex-column w-media-1 gap-3">
                <div class="d-flex flex-row">
                    <label class="w-25" for="username">Identifiant</label>
                    <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control w-75" autocomplete="username" required autofocus>
                </div>
                <div class="d-flex flex-row">
                    <label class="w-25" for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control w-75" autocomplete="current-password" required>
                </div>
            </div>
            <div class="d-flex flex-row w-media-1 gap-3 gap-md-5">

                <button class="btn btn-lg btn-primary" type="submit">
                    Connexion
                </button>
                <div class="d-flex flex-column">
                    <div class="form-group checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me" checked>
                        <label for="_remember_me">Se souvenir de moi</label>
                    </div>
    {#                <a href="{% url 'password_reset' %}">Mot de passe oubli√©</a>#}
                </div>
            </div>
        </div>
    </form>
{% endblock %}
